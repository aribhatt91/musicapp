<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="?android:colorForeground"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardUseCompatPadding="true"
    app:cardCornerRadius="2dp"
    >

    <LinearLayout
        android:id="@+id/genre_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <com.optimus.music.player.onix.Utility.RectangularFrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:background="?android:colorForeground">


            <com.optimus.music.player.onix.Utility.HalfSquareImageView
                android:id="@+id/albumart_three"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|right"
                android:scaleType="centerCrop"
                android:saveEnabled="true"
                android:src="@drawable/transparent"
                />


            <com.optimus.music.player.onix.Utility.CustomRectangularFrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">


                <com.optimus.music.player.onix.Utility.CustomSquareImageView
                    android:id="@+id/albumart_two"
                    android:layout_gravity="top|right"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:saveEnabled="true"
                    android:src="@drawable/transparent"

                    />
            </com.optimus.music.player.onix.Utility.CustomRectangularFrameLayout>









            <com.optimus.music.player.onix.Utility.HalfSquareImageView
                android:id="@+id/albumart_one"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top|left"
                android:scaleType="centerCrop"
                android:saveEnabled="true"
                android:layout_margin="0dp"
                android:src="@drawable/transparent"

                />
            <com.optimus.music.player.onix.Utility.RectangularImageView
                android:id="@+id/albumart_zero"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:scaleType="centerCrop"
                android:saveEnabled="true"
                android:layout_margin="0dp"
                android:src="@drawable/transparent"

                />



        </com.optimus.music.player.onix.Utility.RectangularFrameLayout>

        <include layout="@layout/genre_grid_footer"/>

    </LinearLayout>

</android.support.v7.widget.CardView>