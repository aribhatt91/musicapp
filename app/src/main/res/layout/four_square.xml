<?xml version="1.0" encoding="utf-8"?>
<com.optimus.music.player.onix.Utility.SquareFrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clipToPadding="false"
    android:padding="1dp"
    android:background="?android:colorForeground"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <com.optimus.music.player.onix.Utility.HalfSquareImageView
        android:id="@+id/albumart_three"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom|left"
        android:background="@color/metalYellow"
        android:scaleType="centerCrop"
        android:saveEnabled="true"
        android:layout_margin="0dp"
        android:src="@drawable/default_album_art"

        />


    <com.optimus.music.player.onix.Utility.HalfSquareImageView
        android:id="@+id/albumart_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#0099ff"
        android:layout_gravity="top|right"
        android:scaleType="centerCrop"
        android:saveEnabled="true"
        android:src="@drawable/default_album_art"
        />

    <com.optimus.music.player.onix.Utility.HalfSquareImageView
        android:id="@+id/albumart_four"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:background="#ff2a7f"
        android:scaleType="centerCrop"
        android:saveEnabled="true"
        android:src="@drawable/default_album_art"
        />
    <com.optimus.music.player.onix.Utility.HalfSquareImageView
        android:id="@+id/albumart_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top|left"
        android:background="@color/earthLight"
        android:scaleType="fitXY"
        android:saveEnabled="true"
        android:layout_margin="0dp"
        android:src="@drawable/default_album_art"
        />



</com.optimus.music.player.onix.Utility.SquareFrameLayout>